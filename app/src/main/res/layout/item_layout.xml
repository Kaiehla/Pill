<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardDose"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="69dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_pill" />

        <TextView
            android:id="@+id/title"
            style="@style/pop.bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:text="Title"
            android:textColor="@color/Twilight"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/subtitle"
            style="@style/pop.regular"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="36dp"
            android:text="1 pill, once per day"
            android:textColor="@color/Twilight"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/time"
            style="@style/pop.bold"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="60dp"
            android:text="9:00 PM"
            android:textColor="@color/Twilight"
            android:textSize="13sp" />

        <ImageButton
            android:id="@+id/btnDonePill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_uncheck"
            android:backgroundTint="@android:color/transparent"
            android:scaleX="1.3"
            android:scaleY="1.3"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>