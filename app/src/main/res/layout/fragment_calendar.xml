<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/SubtleBG"
    tools:context=".CalendarFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"
        android:padding="28dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="36sp"
                style="@style/title.twilight"
                android:lineHeight="50sp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>

            <ImageView
                android:layout_width="58dp"
                android:layout_height="51dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_pill" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pill Stats"
            style="@style/pop.bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            android:layout_marginBottom="20dp">

<!--            <CalendarView-->
<!--                android:id="@+id/calendarView"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"/>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_calendar_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:contentDescription="cd_previous"
                        android:src="@drawable/icon_previous"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tv_date_month"
                        style="@style/TextAppearance.MaterialComponents.Subtitle2"
                        android:layout_width="168dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        tools:text="December 2020" />

                    <ImageView
                        android:id="@+id/iv_calendar_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:contentDescription="cd_next"
                        android:src="@drawable/icon_next" />

                </LinearLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/calRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            style="@style/pop.bold"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/btn"
            style="@style/sub.twilight"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/white"
            android:elegantTextHeight="true"
            android:gravity="start|center_vertical"
            android:text="User Profile"
            android:textSize="15dp"
            app:cornerRadius="12dp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btn2"
            style="@style/sub.twilight"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/white"
            android:elegantTextHeight="true"
            android:gravity="start|center_vertical"
            android:text="User Profile"
            android:textSize="15dp"
            app:cornerRadius="12dp"
            tools:ignore="TextSizeCheck" />

        <Button
            android:id="@+id/btn3"
            style="@style/sub.twilight"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/white"
            android:elegantTextHeight="true"
            android:gravity="start|center_vertical"
            android:text="User Profile"
            android:textSize="15dp"
            app:cornerRadius="12dp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>






</ScrollView>